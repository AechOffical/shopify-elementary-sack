<style>

  footer:before {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(var(--color-background-light));
    z-index: -1;

  }

  #foot {
    position: relative;
    justify-content: center;

    grid-auto-rows: unset;
    grid-template-rows: repeat(15, 16px) !important;
    row-gap: 16px;

    max-width: 100vw;

  }

  footer:after {
    content: "";
    position: absolute;



    bottom: 0;
    z-index: 0;
    left: 0;
    height: 100%;
    width: 100%;
    max-width: 100vw;

    box-sizing: inherit;
  }
  .footer-content {
    z-index: 1;
    color: rgba(var(--color-text-light));
  }
  .first-column {

    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  #inf  {
    display: flex;
    gap: 15px;

  }

  .second-column {

    display: flex;
    flex-direction: column;
    gap: 24px;
  }



  .footer-input {
    padding: 16px 5px;

    outline: none;
    color: rgba(var(--color-text-light));
    background: none;
    border: none;
    border-bottom: 1px solid rgba(var(--color-text-light));

    font-size: 16px;
    font-weight: 400;
    line-height: 24px;
    letter-spacing: 0px;
    text-align: left;

  }
  .footer-input:valid {
    padding: 16px 5px;

    outline: none;
    color: rgba(var(--color-text-light));
    background: none;
    border: none;
    border-bottom: 1px solid rgba(var(--color-text-light));

    font-size: 16px;
    font-weight: 400;
    line-height: 24px;
    letter-spacing: 0px;
    text-align: left;
  }
  .footer-input::placeholder {
    font-size: 16px;
    font-weight: 400;
    line-height: 24px;
    letter-spacing: 0px;
    text-align: left;

    color: rgba(var(--color-text-light));

  }

  .footer-form {
    display: flex;
    justify-content: space-between;
    gap: 30px;
  }

  .socialMediaIcons {
    grid-column-end: 13;
    grid-row-start: 14;
    display: flex;
    gap: 8px;
  }


  @media screen and (min-width: 1200px) {
    footer:after {
      background: url("https://cdn.shopify.com/s/files/1/0616/6151/1833/files/BG.png?v=1658476824")  no-repeat ;
      background-size: cover;

    }

    .first-column {
      grid-row-start: 5;
      grid-column-start: 1;
      grid-column-end: 4;
      grid-row-end: 15;
    }

    .second-column {
      grid-row-start: 5;
      grid-column-start: 4;
      grid-column-end: 7;
      grid-row-end: 15;
    }
    .third-column {
      grid-column-start: 7;
      grid-column-end: 13;
      grid-row-start: 5;
    }
    .socialMediaIcons {
      grid-column-end: 13;
      grid-row-start: 14;
    }
    #inf {
      grid-row-start: 14;
      grid-column-end: 6;
      grid-column-start: 1;
    }

    #email {
      width: 100%;
    }
    #zip-code {
      width: 50%;
    }
  }
  @media screen and (max-width: 1199px) and (min-width: 768px) {
    footer:after {
      background: url("https://cdn.shopify.com/s/files/1/0616/6151/1833/files/BG-tablet.png?v=1658484227")  no-repeat ;
      background-size: cover;

    }

    .first-column {
      display: none;
    }

    .second-column {
      grid-row-start: 3;
      grid-column-start: 1;
      grid-column-end: 2;
      grid-row-end: 15;
    }
    .third-column {
      grid-column-start: 4;
      grid-column-end: 7;
      grid-row-start: 3;
    }
    .socialMediaIcons {
      grid-column-end: 7;
      grid-row-start: 14;
      grid-row-end: 15;
      align-self: center;
    }
    #inf {
      grid-row-start: 14;
      grid-column-end: 6;
      grid-column-start: 1;
    }

    .footer-form {
      flex-direction: column;
    }

    #email {
      width: 100%;
    }
    #zip-code {
      width: 100%;
    }
    .footer-button {
      width: 100%;
    }
  }
  @media screen and (max-width: 767px) {
    footer:after {
      background: url("https://cdn.shopify.com/s/files/1/0616/6151/1833/files/BG-tablet.png?v=1658484227")   ;
      background-size: cover;

    }

    .first-column {
      display: none;
    }

    .footer-form {
      flex-direction: column;
    }


  }

  @media screen and (min-width: 1680px) {
    #foot {
      display: grid;
      grid-template-columns: repeat(12, 80px);
      column-gap: 30px;
    }
  }
  @media screen and (min-width: 1200px) and (max-width: 1679px){
    #foot {
      display: grid;

      grid-template-columns: repeat(12, 65px);
      column-gap: 30px;
    }
  }
  @media screen and (min-width: 768px) and (max-width: 1199px){
    #foot {
      display: grid;

      grid-template-columns: repeat(6, 90px);
      column-gap: 30px;
    }
  }
  @media screen and (max-width: 767px){
    #foot {
      display: flex;
      flex-direction: column;
      justify-content: center;
      padding: 3rem;
    }
  }

</style>

<footer  id="foot">
  <div class="first-column footer-content">
    <div>
      <img src="https://cdn.shopify.com/s/files/1/0616/6151/1833/files/es-vector.png?v=1658477985" alt="Logo">
    </div>
  </div>


  <div class="second-column footer-content header6">
    {% for link in linklists['footer'].links %}
      <a href="{{ link.url }}">{{ link.title }}</a>
    {% endfor %}

  </div>

  <div class="third-column footer-content subtitle">
    <span class="overline">GET OUR LATEST INSIGHTS</span>
    <form class="footer-form">
      <input id="email" type="email" class="footer-input" placeholder="Your Email">
      <input id="zip-code" type="text" class="footer-input" placeholder="Zip-code">
      <input id="footer-button" type="submit" class="button-secondary-dark" value="Sign up">
    </form>
  </div>

  <div class="socialMediaIcons footer-content">
    {% render 'instagram' %}
    {% render 'facebook' %}
  </div>
  <div id="inf" class="footer-content caption">
    &copy; 2021 Element Snacks. All rights reserved
    <a href="#">Privacy Policy</a>
    <a href="#">Home</a>
    <a href="#">Website by 829</a>
  </div>

</footer>



