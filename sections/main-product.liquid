<style>
    .productView {
        display: grid;
        grid-auto-rows: 16px;
        justify-content: center;
        height: 100%;
        padding-bottom: 100%;

    }
    .h2 {
        font-style: normal;
        font-weight: 600;
        font-size: 42px;
        line-height: 48px;
    }
    .h3 {
        font-style: normal !important;
        font-weight: 600 !important;
        font-size: 26px !important;
        line-height: 32px !important;
        color: #311C1C;
    }
    .subtitle {
        font-size: 16px;
        font-weight: 400;
        line-height: 24px;
        letter-spacing: 0;
        color: #311C1C !important;
    }
    .productViewWrap {
        background-color: #F5F5F1;
        padding-top: 3%;
    }

    .productImgWrap {
        padding-bottom: 100%;
        height: 0;
        position: relative;

    }
    .content {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }
    #mainPhoto {
        position: absolute !important;
        padding-bottom: 100% !important;
        margin: auto !important;
        left: 0 !important;
        right: 0 !important;
        /*bottom: -100%;*/
        top: 0 !important;
        width: 80% !important;
        max-width: 1000px !important;
        max-height: max-content !important;
    }

    @media screen and (min-width: 1200px) {
        .productImgWrap {
            grid-column-start: 1;
            grid-column-end: 7;
            grid-row-start: 10;
        }
        .content {
            grid-column-start: 8;
            grid-column-end: 13;
            color: black;
            grid-row-start: 10;
        }
    }
    @media screen and (max-width: 1199px) and (min-width: 768px) {
        .productImgWrap {
            grid-column-start: 1;
            grid-column-end: 4;
            grid-row-start: 10;
        }
        .content {
            grid-column-start: 4;
            grid-column-end: 7;
            grid-row-start: 10;

        }
    }
    @media screen and (max-width: 767px) {
        .productImgWrap {
            grid-column-start: 1;
            grid-column-end: 3;
            grid-row-start: 10;
        }
        .content {
            grid-column-start: 1;
            grid-column-end: 3;
        }


    }



    @media screen and (min-width: 1680px) {
        .productView {
            grid-template-columns: repeat(12, 80px);
            column-gap: 30px;
            height: 0;
        }
    }
    @media screen and (min-width: 1200px) and (max-width: 1679px){
        .productView {
            grid-template-columns: repeat(12, 65px);
            column-gap: 30px;
        }
    }
    @media screen and (min-width: 768px) and (max-width: 1199px){
        .productView {
            grid-template-columns: repeat(6, 90px);
            column-gap: 30px;
        }
    }
    @media screen and (max-width: 767px){
        .productView {
            display: grid;
            grid-template-columns: 130px 130px;
            grid-column-gap: 20px;
        }
    }
</style>
{% form 'product', product %}

<div class="productViewWrap">
    <section class="productView">
        <div class="productImgWrap" style="background-color: {{ product.metafields.custom.backgroundcolor.value }} ">
            <img id="mainPhoto" src="{{ product.featured_media | image_url: width: 1000}}" alt="Product image">
        </div>
        <div class="content">
            <span class="h2">{{ product.title }}</span>
            <span class="subtitle">6-Pack (6-cakes per pack)</span>
            <div class="h3">
                {% render 'price', price: product.price %}
            </div>
            <div>
                <button
                        type="submit"
                        name="add"
                        class=""
                        {% if product.selected_or_first_available_variant.available == false %}disabled{% endif %}
                >
                            <span>
                              {%- if product.selected_or_first_available_variant.available -%}
                                  {{ 'products.product.add_to_cart' | t }}
                              {%- else -%}
                                  {{ 'products.product.sold_out' | t }}
                              {%- endif -%}
                            </span>
                    <div class="loading-overlay__spinner hidden">
                        <svg aria-hidden="true" focusable="false" role="presentation" class="spinner" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
                            <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                        </svg>
                    </div>
                </button>

        </div>
        </div>


    </section>
</div>
{% endform %}