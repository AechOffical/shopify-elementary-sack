<style>

    .blue {
        display: flex;
        justify-content: center;
        align-items: center;
        color: #FFFFFF;
    }
    .hyphen {
        background-color: #FFFFFF !important;
        width: 60px;
        height: 1px;
    }
    .h1 {
        font-size: 60px;
        font-weight: 700;
        line-height: 64px;
        letter-spacing: 0;
        text-align: left;
        color: #FFFFFF;
    }
    .body1 {
        width: 50%;

        font-size: 20px;
        font-weight: 400;
        line-height: 32px;
        letter-spacing: 0px;
        text-align: left;

    }

    .script {
        display: flex;
        align-items: center;
        gap: 8px;
    }
    .blue-wrapper {
        padding-top: 130px;
        position: relative;
        /*max-height: 2000px;*/
        padding-left: 0;
        padding-right: 0;
        margin: 0;
        z-index: 4;
    }

    .blue-wrapper:after {
        content: "";
        position: absolute;
        z-index: -1;
        top: 0;
        left: 0;

        width: 100%;
        height: 700px;
        background: url("https://cdn.shopify.com/s/files/1/0616/6151/1833/files/BG-blue.png?v=1658212473") top no-repeat;
        background-size: cover;
        background-position-y: -100px;
        /*max-height: 2000px;*/
    }

    img {
        max-width: fit-content !important;
    }

    .content {
        max-width: 800px;
        display: flex;
        flex-direction: column;
        padding: 5px;
    }

    @media screen and (max-width: 1199px) {
        .blue {
            flex-direction: column;
        }
        img {
            max-width: 400px;
        }
    }
    @media screen and (max-width: 720px) {
        .blue {
            flex-direction: column;
        }

        img {
            max-width: 300px;

    }
    }

</style>
{% if collection and collection != empty %}

    <section class="blue-wrapper">
        <section class="blue">
            <div class="content">
                <div class="script">
                    <div class="hyphen ">
                    </div>
                    Shop
                </div>
                <span class="h1">{{ collection.title }}</span>
                <p class="body1">{{ collection.description }}</p>
            </div>
            <div class="img">
                {% if collection.image %}
                    <img src="{{ collection.image | img_url: "master"  }}" alt="collection image">

                {% endif %}
            </div>
        </section>
    </section>

{% endif %}
