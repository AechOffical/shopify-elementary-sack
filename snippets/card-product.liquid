<style>
  article {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 410px;
    text-align: center;
  }
  article:hover {
    --bg: #F0F0F0;
  }
  .h3 {
    /*color: $textDark;*/
    margin: 5px;
    font-size: 18px;
    font-weight: 600;
    line-height: 24px;
    letter-spacing: 0;
  }

  .img {
    background-color: var(--bg);
  }
  a {
    color: inherit;
  }


  .body1 {
    margin: 0;
    text-align: center;
    width: 100%;

    /*color: $neutral45;*/
    font-size: 16px;
    font-weight: 400;
    line-height: 24px;
    letter-spacing: 0;
  }

  .product-card-img {
    padding: 0;
    max-width: 346px !important;
    max-height: 450px !important;
  }


</style>


{% if card_product and card_product != empty %}
<a href="{{ card_product.url }}" onmouseenter="mouseEnter('{{ card_product.id }}')" onmouseleave="onMouseleave('{{ card_product.id }}', '{{ card_product.metafields.custom.background_color.value }}')">
  <article class="article" >
    <div class="img img-{{ card_product.id }}" style="background-color: {{ card_product.metafields.custom.background_color.value }}">
      <img class="product-card-img" src="{{ card_product.featured_media |   img_url: "master" }}" alt="product photo">
    </div>
    <p class="h3">{{card_product.title}}</p>
    <p class="body1">
      <span>{% render 'price', product: card_product, price_class: '' %}</span> <span> | 6-Pack (6 cakes per pack)</span>
    </p>

  </article>
</a>
{% endif %}


<script>
  function mouseEnter(productId) {
    gsap.to(`.img-${productId}`, {
      background: "#F7F7F7"
    })
  }

  function onMouseleave(productId, color) {
    gsap.to(`.img-${productId}`, {
      background: color
    })
  }

</script>
